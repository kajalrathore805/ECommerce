<%= render  "shared/login_nav"%>
   

	<div class="container d-flex justify-content-center mt-5">

	  <div class="p-4 border rounded shadow bg-white" style="min-width: 400px;">
	    <h2 class="text-dark mb-4 text-center">Registration form</h2>
				<%= form_with model: @user, url: users_path do |form|%>

					<div class="mb-3">
						<%= form.label :type%>
						<%= form.select :type, ["Buyer", "Seller"] ,class: "form-control" %>
					</div>

					<div class="mb-3">
						<%= form.label :full_name%>
						<%= form.text_field :full_name,class: "form-control"%>
					</div>

					<div class="mb-3">
						<%= form.label :email%>
						<%= form.email_field :email,class: "form-control"%>
					</div>

					<div class="mb-3">
						<%= form.label :password%>
						<%= form.password_field :password,class: "form-control"%>
					</div>

					<div class="mb-3">
						<%= form.label :confirm_password%>
						<%= form.password_field :password_confirmation,class: "form-control"%>
					</div>


					<div class="mb-3">
						<%= form.label :phone%>
						<%= form.number_field :phone ,class: "form-control" %>
					</div>

					<div class="mb-3">
						<%= form.label :image %>
	      		<%= form.file_field :image %>
					</div>

				  <div class="mb-3">
					<%= form.submit "Submit",class: "btn btn-success" %>
					</div>
				<% end %>
		</div>
	</div>
