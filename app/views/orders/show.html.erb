<h2>Order Confirmation</h2>

<p><strong>Order ID:</strong> <%= @order.id %></p>
<p><strong>Total Price:</strong> ₹<%= @order.total_price %></p>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Qty</th>
      <th>Price</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td>₹<%= item.price %></td>
        <td>₹<%= item.total_amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
