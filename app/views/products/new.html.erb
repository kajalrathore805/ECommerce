 
<div class="container d-flex justify-content-center mt-5">
  <div class="p-4 border rounded shadow bg-white" style="min-width: 400px;">
    <h2 class="text-dark mb-4 text-center">Product  form</h2>
	
			<%= form_with  model: @product  do |form|%>
				
				<div class="mb-3 col-sm-4">
					<%= form.label :name%>
					<%= form.text_field :name,class: "form-control"%>
				</div>

				<div class="mb-3 col-sm-4">
				<%= form.label :description%>
				<%= form.text_field :description,class: "form-control"%>
				</div>

				<div class="mb-3 col-sm-4">
					<%= form.label :price%>
					<%= form.text_field :price,class: "form-control"%>
				</div>

				<div class="mb-3 col-sm-4">
					<%= form.label :store_id%>
					<%= form.collection_select :store_id, Store.order(:name) , :id,:name%>
				</div>

				<div class="mb-3 col-sm-4">
					<%= form.label :sub_category_id%>
					<%= form.collection_select :sub_category_id, SubCategory.order(:name) , :id,:name%>
				</div>

			  <div class="mb-3 col-sm-4">
				<%= form.submit "Submit",class: "btn btn-success" %>
				</div>
			<% end %>
	</div>
</div>