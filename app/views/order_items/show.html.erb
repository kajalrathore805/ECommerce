

<%= render  "shared/buyer_header"%>

<h1>Order Item Detail</h1>

<p><strong>Product:</strong> <%= @order_item.product.name %></p>
<p><strong>Description:</strong> <%= @order_item.product.description %></p>
<p><strong>Quantity:</strong> <%= @order_item.quantity %></p>
<p><strong>Price:</strong> ₹<%= @order_item.price %></p>
<p><strong>Subtotal:</strong> ₹<%= @order_item.quantity * @order_item.product.price %></p>

<%= link_to "Back to Stores", order_order_items_path(@order_item.order), class: "btn btn-secondary" %>
