 
<div class="mt-3 container">
	
	<%= form_with  model: @address  do |form|%>



		<div class="mb-3 col-sm-4">
			<%= form.label :addressable_id%>
			<%= form.collection_select :addressable_id, User.order(:full_name) , :id,:full_name%>
		</div>

		<div class="mb-3 col-sm-4">
			<%= form.label :addressable_type%>
			<%= form.select :addressable_type,['Buyer','Seller']%>
		</div>
		
		<div class="mb-3 col-sm-4">
			<%= form.label :address_line%>
			<%= form.text_field :address_line,class: "form-control"%>
		</div>

		<div class="mb-3 col-sm-4">
		<%= form.label :city%>
		<%= form.text_field :city,class: "form-control"%>
		</div>

		<div class="mb-3 col-sm-4">
			<%= form.label :state%>
			<%= form.text_field :state,class: "form-control"%>
		</div>

		<div class="mb-3 col-sm-4">
		<%= form.label :pincode%>
		<%= form.number_field :pincode,class: "form-control"%>
		</div>

	  <div class="mb-3 col-sm-4">
		<%= form.submit "Submit",class: "btn btn-success" %>
		</div>
	<% end %>
</div>
