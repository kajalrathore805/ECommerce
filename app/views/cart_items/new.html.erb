<%= render  "shared/buyer_header"%>

<div class="container d-flex justify-content-center mt-5">
  <div class="p-4 border rounded shadow bg-white" style="min-width: 400px;">
    <h2 class="text-dark mb-4 text-center">Cart Items  form</h2>
	
			<%= form_with  model: @cart_item ,url: cart_items_path  do |form|%>
				
				<div class="mb-3">
					<%= form.label :quantity%>
					<%= form.text_field :quantity,class: "form-control"%>
				</div>
				<% @products.each do |product| %>
				<div class="mb-3">
					<%= form.hidden_field :product_id, value:product.id , class: "form-control"%>
				</div>
				<% end %>
				<div class="mb-3">
        <%= form.hidden_field :buyer_id, value:@current_user.id  %>
        </div>

			  <div class="mb-3">
				<%= form.submit "Submit",class: "btn btn-success" %>
				</div>
			<% end %>
	</div>
</div>