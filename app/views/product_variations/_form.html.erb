 
<div class="container d-flex justify-content-center mt-5">
  <div class="p-4 border rounded shadow bg-white" style="min-width: 400px;">
    <h2 class="text-dark mb-4 text-center">Edit Product variation form</h2>
			<%= form_with  model: @product_variation  do |form|%>
				
				<div class="mb-3">
					<%= form.label :color%>
					<%= form.text_field :color,class: "form-control"%>
				</div>

				<div class="mb-3">
					<%= form.label :product_id%>
					<%= form.collection_select :product_id, Product.order(:name) , :id,:name%>
				</div>

			  <div class="mb-3">
					<%= form.submit "Submit",class: "btn btn-success" %>
				</div>
			<% end %>
	</div>
</div>
