
<header>
  <nav>
      <div class="logo">
          <a href="/home/index">ECommerce</a>
      </div>
      <ul>
          <li><a href="/home/index">Home</a></li>
          <li><a href="/products/new">Products</a></li>
          <li><a href="/users/:id">Profile</a></li>
      </ul>
  </nav>
</header>
<div class="container d-flex justify-content-center mt-5">
  <div class="p-4 border rounded shadow bg-white" style="min-width: 400px;">
    <h2 class="text-dark mb-4 text-center">Store Form</h2>

    <%= form_with model: @store do |form| %>
      <div class="mb-3">
        <%= form.hidden_field :seller_id, value:@current_user.id  %>
      </div>

      <div class="mb-3">
        <%= form.label :Store_name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= form.submit "Submit", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
