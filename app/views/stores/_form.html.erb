<div class="container d-flex justify-content-center mt-5">
  <div class="p-4 border rounded shadow bg-white" style="min-width: 400px;">
    <h2 class="text-dark mb-4 text-center">Edit Store Form</h2>
			<%= form_with  model: @store  do |form|%>

				<div class="mb-3">
					<%= form.collection_select :seller_id, Seller.order(:full_name), :id,:full_name%>
				</div>

				<div class="mb-3">
					<%= form.label :name%>
					<%= form.text_field :name,class: "form-control"%>
				</div>

				<div class="mb-3">
					<%= form.label :description%>
					<%= form.text_field :description,class: "form-control"%>
				</div>

			  <div class="mb-3">
					<%= form.submit "Submit",class: "btn btn-success" %>
				</div>
			<% end %>
	</div>
</div>
