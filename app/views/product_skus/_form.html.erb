<div class="container d-flex justify-content-center mt-5">
  <div class="p-4 border rounded shadow bg-white" style="min-width: 400px;">
    <h2 class="text-dark mb-4 text-center">Edit Product Sku Form</h2>
	
			<%= form_with  model: @product_variation  do |form|%>
				
				<div class="mb-3 col-sm-4">
					<%= form.label :size%>
					<%= form.text_field :size,class: "form-control"%>
				</div>

				<div class="mb-3 col-sm-4">
					<%= form.label :sku_code%>
					<%= form.text_field :sku_code,class: "form-control"%>
				</div>

				<div class="mb-3 col-sm-4">
					<%= form.label :product_variation_id%>
					<%= form.collection_select :product_variation_id, Product.order(:color) , :id,:color%>
				</div>

			  <div class="mb-3 col-sm-4">
					<%= form.submit "Submit",class: "btn btn-success" %>
				</div>
			<% end %>
	</div>
</div>
